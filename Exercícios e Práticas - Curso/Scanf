//código 1
#include <stdio.h>

int main(){
  int idade = 0;   

  printf("A idade atual é: %d\n",idade);
  
  printf("Agora informe a idade que você quer: ");
  scanf("%d", &idade);
  
  printf("Ótimo! A idade informada foi %d\n",idade);
  
}




//código 2
#include <stdio.h>

int main(){
  int idade = 0, ano = 2024;
 
  printf("Informe a idade e o ano que você quer: ");
  scanf("%d %d", &idade, &ano);
  
  printf("Ótimo! A idade informada foi %d %d\n",idade,ano);

}
