#include <stdio.h>

int main(){
  int idade = 0, ano = 2024;
  float peso = 0.0;
 
  printf("Informe a idade: ");
  scanf("%d",&idade);
  
  printf("Informe o ano: ");
  scanf("%d",&ano);
  
  printf("Informe o peso: ");
  scanf("%f", &peso);
  
  printf("A idade informada foi %d\n",idade);
  printf("O ano informado foi %d\n",ano);
  printf("O peso informado foi: %f",peso);

}
